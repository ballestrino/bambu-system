generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole        @default(USER)
  accounts      Account[]
  isTwoFactorEnabled Boolean @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  budgets Budget[]
  chats Chat[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}

model VerificationToken { 
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime
  oldemail String? //if( oldEmail) update the user with this email to email and set emailVerified

  @@unique([email, token])
}

model PasswordResetToken {
  id String @id @default(cuid())
  email String 
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id String @id @default(cuid())
  email String 
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorConfirmation {
  id String @id @default(cuid())

  // optional expires, now the token is delete and every time you sign in you need to confirm
 
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique ([userId])
}

model Budget { 
  id String @id @default(cuid())
  slug String @unique
  name String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  budgetOptions BudgetOption[]
  chats Chat[]

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum VisitType { 
  days
  week
  month
}

model BudgetOption {
  id                       String    @id @default(cuid())
  // Info
  visits                   Int
  visit_type               VisitType
  hours_per_visit          Float
  nominal_hour             Float
  nominal_salary           Float
  employees                Int

  // Contributions
  incidence_contribution   Float
  company_contribution     Float
  personal_contribution    Float

  // Extra costs
  transportation_cost      Float
  products_price           Float
  products_iva             Float


  // Revenues
  products_revenue_percent Float
  revenue_percent          Float

  // Price
  price                    Float
  profit                   Float?    @default(0) // Made optional with default for easier migration, though ideally should be calculated
  iva                      Float  

  // Relations
  budgetId String
  budget   Budget @relation(fields: [budgetId], references: [id], onDelete: Cascade)

  // Dates
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  has_products Boolean @default(true)
}

model Chat {
  id        String    @id @default(cuid())
  name      String?   // Optional title for the chat
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  budgetId  String?
  budget    Budget?   @relation(fields: [budgetId], references: [id], onDelete: Cascade)

  messages  Message[]
}

enum Role {
  user
  assistant
  system
  data // Optional: for data messages if needed
}

model Message {
  id        String   @id @default(cuid())
  role      Role // user, assistant, system
  content   String   @db.Text // Use Text type for potentially long content
  createdAt DateTime @default(now())
  
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
}